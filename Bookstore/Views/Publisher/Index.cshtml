@model IEnumerable<Bookstore.Entities.Publisher>

<div class="container">

    <h1>Publisher</h1>
    <hr />

    <div class="col-12 col-md-12">
        <a asp-action="Create" class="btn btn-success m-3" style="float:right">
            <i class="fas fa-plus-circle"></i>&nbsp; &nbsp;  Create
        </a>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th> Id </th>
                <th> Name </th>
                <th> Country </th>
                <th> Year </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => publisher.Id) </td>
                    <td> @Html.DisplayFor(modelItem => publisher.Name) </td>
                    <td> @Html.DisplayFor(modelItem => publisher.Country) </td>
                    <td> @Html.DisplayFor(modelItem => publisher.Year) </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@publisher.Id" class="btn btn-secondary btn-block">
                            <i class="fas fa-edit"></i> &nbsp; &nbsp; Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@publisher.Id" class="btn btn-info btn-block">
                            <i class="fas fa-info"></i> &nbsp; &nbsp; Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@publisher.Id" class="btn btn-danger btn-block">
                            <i class="fas fa-trash"></i> &nbsp; &nbsp; Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
